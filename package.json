{
  "name": "sports-season-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:functions\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:functions": "wrangler pages dev dist --port=8788 --compatibility-date=2023-05-18",
    "dev:d1:start": "wrangler pages dev dist --d1 DB=sports_seasons --compatibility-date=2023-05-18 --port 8788",
    "build": "tsc -b && vite build",
    "build:functions": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "migrate": "npm run migrate:local",
    "migrate:local": "npx wrangler d1 execute sports_seasons --local --file=migrations/0001_create_seasons.sql && npx wrangler d1 execute sports_seasons --local --file=migrations/0002_create_games.sql && npx wrangler d1 execute sports_seasons --local --file=migrations/0003-add-user-seasons.sql && npx wrangler d1 execute sports_seasons --local --file=migrations/0004-add-season-members.sql",
    "migrate:remote": "npx wrangler d1 execute sports_seasons --remote --file=migrations/0001_create_seasons.sql && npx wrangler d1 execute sports_seasons --remote --file=migrations/0002_create_games.sql && npx wrangler d1 execute sports_seasons --remote --file=migrations/0003-add-user-seasons.sql && npx wrangler d1 execute sports_seasons --remote --file=migrations/0004-add-season-members.sql"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.4.0",
    "@reduxjs/toolkit": "^2.8.2",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.541.0",
    "moment": "^2.30.1",
    "react": "^19.1.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-big-calendar": "^1.16.2",
    "@types/react-dom": "^19.1.7",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
